{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fyla",
  "version": "1.0.0",
  "identifier": "com.fyla.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Fyla",
        "width": 560,
        "height": 480,
        "minWidth": 440,
        "minHeight": 380,
        "resizable": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "visible": false,
        "trafficLightPosition": { "x": 13, "y": 24 }
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": ["icons/tray-2.png"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-",
      "minimumSystemVersion": "13.0",
      "infoPlist": "Info.plist"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM2RDk1MzdDRkY5MkM3QkUKUldTK3g1TC9mRlBaTm1YWlJyVFQvZUFVK0R4NW14NmYwWit6dmJNdGhDN2RKOUhVMWtxMnMyUHoK",
      "endpoints": [
        "https://github.com/Syuchin/Fyla/releases/latest/download/latest.json"
      ]
    }
  }
}
